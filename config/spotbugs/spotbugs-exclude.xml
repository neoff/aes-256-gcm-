<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code -->
    <Match>
        <Source name="~.*generated.*"/>
    </Match>
    
    <!-- SecureRandom is thread-safe, storing it is safe -->
    <Match>
        <Class name="com.envarg.service.AesGcmService"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Spring-managed properties bean, immutable after initialization -->
    <Match>
        <Class name="com.envarg.config.AesGcmAutoConfiguration"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>
